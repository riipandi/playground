{
    "name": "nextjs-drizzle-playground",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "build": "npm run db:generate && next build",
        "start": "npm run db:migrate && next start",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
        "docker:build": "docker build --compress -t $npm_package_name:$npm_package_version -t $npm_package_name:latest .",
        "docker:run": "docker run --rm --interactive --env-file .env.docker -p 3000:3000 --name $npm_package_name $npm_package_name:latest",
        "docker:shell": "docker exec -it $npm_package_name /bin/sh",
        "docker:logs": "docker logs -f $npm_package_name",
        "docker:stop": "docker stop $npm_package_name",
        "db:migrate": "ts-node database/migrate",
        "db:seed": "ts-node database/seed",
        "db:generate": "drizzle-kit generate:pg",
        "db:check": "drizzle-kit check:pg",
        "db:up": "drizzle-kit up:pg",
        "db:drop": "drizzle-kit drop"
    },
    "dependencies": {
        "@neondatabase/serverless": "^0.4.1",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/typography": "^0.5.9",
        "@twistail/icons": "^0.1.0",
        "clsx": "^1.2.1",
        "dotenv": "^16.0.3",
        "drizzle-orm": "^0.24.4",
        "drizzle-zod": "^0.3.2",
        "next": "13.3.0",
        "next-plausible": "^3.7.2",
        "postgres": "^3.3.4",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "tailwind-merge": "^1.12.0",
        "tailwind-scrollbar-hide": "^1.1.7",
        "tailwindcss": "3.3.1",
        "ts-node": "^10.9.1",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@types/node": "18.15.13",
        "@types/react": "18.0.37",
        "@types/react-dom": "18.0.11",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "autoprefixer": "10.4.14",
        "dotenv-cli": "^7.2.1",
        "drizzle-kit": "^0.17.5",
        "eslint": "8.38.0",
        "eslint-config-next": "13.3.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-tailwindcss": "^3.11.0",
        "postcss": "8.4.23",
        "prettier": "^2.8.7",
        "typescript": "5.0.4"
    },
    "prettier": {
        "jsxSingleQuote": true,
        "printWidth": 100,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "es5",
        "useTabs": false
    }
}
