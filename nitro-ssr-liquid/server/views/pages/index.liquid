{% layout 'layouts/site-layout' %}

<main>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-blue-50 to-white py-10 sm:py-14">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center space-y-6">
        <h1 class="text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600">
          {{ pageTitle }}
        </h1>
        <p class="text-xl text-gray-600 leading-relaxed">
          {{ pageDescription }}
        </p>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  {% render 'partials/features', features: features, title: "Key Features"%}

</main>

{% block 'footer' %}
  <footer class="bg-gray-900 text-white py-8">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-400">
          Copyright &copy; 2024, Aris Ripandi. All rights reserved.
        </p>
        <div class="flex gap-6">
          <a href="/404" class="text-gray-400 hover:text-white transition-colors">Terms</a>
          <a href="/404" class="text-gray-400 hover:text-white transition-colors">Privacy</a>
          <a href="/404" class="text-gray-400 hover:text-white transition-colors">Contact</a>
        </div>
      </div>
    </div>
  </footer>
{% endblock %}
