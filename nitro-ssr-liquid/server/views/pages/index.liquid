{% layout 'layouts/site-layout' %}

<main>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-brand-100 to-white py-10 sm:py-14">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center space-y-6">
        <h1 class="text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-brand-600 via-red-500 to-brand-700">
          {{ pageTitle }}
        </h1>
        <p class="text-xl text-gray-800 leading-relaxed font-medium">
          {{ pageDescription }}
        </p>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  {% render 'partials/features', features: features, title: "Key Features"%}

</main>

{% block 'footer' %}
  <footer class="bg-gray-900 text-white py-8">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-300">
          Copyright &copy; {{ 'now' | date: '%Y' }} - Aris Ripandi
        </p>
        <div class="flex gap-6">
          <a href="https://github.com/riipandi/playground/tree/main/nitro-ssr-liquid" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-white transition-colors">GitHub</a>
          <a href="https://x.com/intent/follow?screen_name=riipandi" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-white transition-colors">Twitter</a>
          <a href="/404" class="text-gray-300 hover:text-white transition-colors">404 Page</a>
        </div>
      </div>
    </div>
  </footer>
{% endblock %}
