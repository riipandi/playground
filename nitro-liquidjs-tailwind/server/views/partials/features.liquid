  <section class="py-10 sm:py-14">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-3xl font-bold text-gray-900 mb-12 text-center">{{ title }}</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {% for feature in features %}
            <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100">
              <div class="space-y-4">
                <div class="w-fit bg-blue-100 rounded-lg px-3 py-1">
                  <span class="text-xs font-medium text-blue-600">{{ feature.highlight }}</span>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-gray-900">{{ feature.name }}</h3>
                  <p class="text-gray-600 mt-2">{{ feature.description }}</p>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
