{
    // https://nitro.unjs.io/guide/typescript
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./.nitro/types/tsconfig.json",
    "compilerOptions": {
        "noEmit": true, // Do not emit output (Nitro handles building)
        "skipLibCheck": true, // Skip type checking of all declaration files
        "verbatimModuleSyntax": true, // Do not transform imports/exports, enforced 'type-only' imports
        "tsBuildInfoFile": "./node_modules/.tsbuildinfo"
    }
}
